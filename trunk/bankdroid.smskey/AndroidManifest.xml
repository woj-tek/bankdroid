<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="bankdroid.smskey" android:installLocation="auto" android:versionCode="52" android:versionName="3.11"> 
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
	<application android:icon="@drawable/soda_launch" android:label="@string/app_name" android:debuggable="false"  android:theme="@android:style/Theme.NoTitleBar">

		<activity android:name="bankdroid.smskey.Main" android:label="@string/app_name"
			android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

 
		<activity android:name="bankdroid.smskey.SMSOTPDisplay" android:label="@string/app_name" android:launchMode="singleTask"/>
		<receiver android:name=".SMSReceiver">
			<intent-filter android:priority="2147483647">
				<action android:name="android.provider.Telephony.SMS_RECEIVED"/>
			</intent-filter>
		</receiver>
		<activity android:name="bankdroid.smskey.Preferences"/>


		<provider android:exported="false" android:name=".BankProvider"
			android:label="Banks" android:enabled="true" android:authorities="bankdroid.smskey.Bank"/>


		<activity android:name="bankdroid.smskey.AboutActivity"/>
		<activity android:name="bankdroid.smskey.SMSListActivity"/>
		<activity android:name="bankdroid.smskey.BankListActivity"/>
		<activity android:name=".BankEditActivity"
			android:screenOrientation="portrait"/>

	</application>
	<uses-sdk android:minSdkVersion="4"/>

</manifest> 